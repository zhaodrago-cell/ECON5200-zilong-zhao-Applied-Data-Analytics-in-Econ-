      "cell_type": "code",
      "source": [
        "from sklearn.model_selection import train_test_split\n",
        "df = sns.load_dataset(\"titanic\")\n",
        "\n",
        "# Step 3: Fixing Covariate Shift (Stratified Split by 'pclass')\n",
        "train_df, test_df = train_test_split(\n",
        "    df,\n",
        "    test_size=0.20,\n",
        "    random_state=2026,\n",
        "    stratify=df[\"pclass\"]   # forces identical pclass distribution in train/test\n",
        ")\n",
        "\n",
        "print(\"\\n--- Stratified Split (by pclass) ---\")\n",
        "print(\"Train Class Dist:\\n\", train_df[\"pclass\"].value_counts(normalize=True).sort_index())\n",
        "print(\"Test  Class Dist:\\n\", test_df[\"pclass\"].value_counts(normalize=True).sort_index())"
      ],
